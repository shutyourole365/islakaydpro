# ========================================
# ISLAKAYD ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ----------------------------------------
# REQUIRED - Application will not work without these
# ----------------------------------------

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ----------------------------------------
# OPTIONAL - Enhanced functionality
# ----------------------------------------

# Stripe Payment Processing
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_...) for development
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key

# Google Analytics 4
# Get from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Sentry Error Tracking (Recommended for production)
# Get from: https://sentry.io/settings/projects/your-project/keys/
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------------------------------
# FEATURE FLAGS
# ----------------------------------------
VITE_ENABLE_PWA=true
VITE_ENABLE_AI_ASSISTANT=true

# ----------------------------------------
# DEVELOPMENT SETTINGS
# ----------------------------------------

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=https://your-project-id.supabase.co/functions/v1

# Development Mode (use demo data without backend)
VITE_DEMO_MODE=false

# Enable debug logging
VITE_DEBUG=false

# ----------------------------------------
# NOTES
# ----------------------------------------
# • Required variables MUST be set for the app to work
# • Use test/development keys during development
# • Never share or commit your .env.local file
# • See SETUP_GUIDE.md for step-by-step configuration
